@model LoginModel

@{
    Layout = "_LayoutDeslogado";
    ViewData["Title"] = "Login";
}

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="Close"></button>
        @TempData["MensagemErro"]
    </div>
}

<form asp-controller="Login" asp-action="Entrar" method="post">
  <div class="mb-3">
    <label for="Email" class="form-label">Seu E-mail</label>
    <input type="email" asp-for="Email" class="form-control" id="Email">
    @Html.ValidationMessageFor(x => x.Email)
  </div>

  <div class="mb-3">
    <label for="Senha" class="form-label">Senha</label>
    <input type="password" asp-for="Senha" class="form-control" id="Senha">
    @Html.ValidationMessageFor(x => x.Senha)
  </div>

  <button type="submit" class="btn btn-primary btn-block">Entrar</button>
</form>